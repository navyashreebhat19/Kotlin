<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:weightSum="5"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:background="@color/colorLightPink">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_gravity="center"
                android:layout_weight="1"
                  android:id="@+id/backDayone"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:textColor="@color/colorPink"
                  android:text="Day"
                  android:textSize="30dp"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:id="@+id/setDay"
        android:fontFamily="sans-serif-black"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/name"
                android:layout_gravity="center"
                android:layout_weight="1"

                  android:id="@+id/nextDayone"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:weightSum="4"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:layout_gravity="center"

                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
    >
        <android.support.v7.widget.CardView android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_weight="1"
                                            app:cardElevation="4dp"
                                            app:cardCornerRadius="8dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@color/colorPurple"

                                            android:id="@+id/wakeupDayone">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:weightSum="2"
                          android:layout_gravity="center"
                          >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="WakeUp"
                          android:textColor="@color/colorPurple"
                          android:gravity="center"
                          android:textSize="15dp"
                          android:layout_marginBottom="5dp"
                          android:layout_gravity="center"
                         />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/wakeup"
                           android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            app:cardElevation="4dp"
                                            app:cardCornerRadius="8dp"
                                            android:layout_weight="1"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@color/colorPurple"

                                            android:id="@+id/midmealsDayone" >
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:weightSum="2"
                          android:layout_gravity="center"

            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Mid Meals"
                          android:textColor="@color/colorPurple"
                          android:gravity="center"

                          android:textSize="15dp"
                          android:layout_marginBottom="5dp"
                          android:layout_gravity="center"
                          />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/midmeals"
                           android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            app:cardElevation="4dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_weight="1"
                                            app:cardCornerRadius="8dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@color/colorPurple"

                                            android:id="@+id/snacksDayone">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:weightSum="2"
                          android:layout_gravity="center"
                         >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Snacks"
                          android:textColor="@color/colorPurple"
                          android:gravity="center"
                          android:textSize="15dp"
                          android:layout_marginBottom="5dp"
                          android:layout_gravity="center"
                         />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/snacks"
                           android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="horizontal"
                      android:weightSum="3"
                      android:layout_gravity="center"

                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
        >
            <android.support.v7.widget.CardView android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_weight="1"
                                                app:cardElevation="4dp"
                                                app:cardCornerRadius="8dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:background="@color/colorPurple"
                                                android:id="@+id/breakfastDayone"

            >
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:weightSum="2"
                              android:layout_gravity="center"
                             >
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="BreakFast"
                              android:textColor="@color/colorPurple"
                              android:gravity="center"
                              android:textSize="15dp"
                              android:layout_gravity="center"
                              android:layout_marginBottom="5dp"
                              />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                    android:src="@drawable/breakfast"
                    android:layout_gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                app:cardElevation="4dp"
                                                app:cardCornerRadius="8dp"
                                                android:layout_weight="1"
                                                android:layout_marginBottom="10dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:background="@color/colorPurple"
                                                android:id="@+id/lunchDayone"

            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:weightSum="2"
                              android:layout_gravity="center"

                >
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Lunch"
                              android:textColor="@color/colorPurple"
                              android:gravity="center"
                              android:textSize="15dp"
                              android:layout_marginBottom="5dp"
                              android:layout_gravity="center"
                             />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                    android:src="@drawable/lunch"
                    android:layout_gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                app:cardElevation="4dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_weight="1"
                                                app:cardCornerRadius="8dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:background="@color/colorPurple"
                                                android:id="@+id/dinnerDayone"

            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:weightSum="2"
                              android:layout_gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Dinner"
                              android:textColor="@color/colorPurple"
                              android:gravity="center"
                              android:textSize="15dp"
                              android:layout_marginBottom="5dp"
                              android:layout_gravity="center"
                              />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/dinner"
                               android:layout_gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center_horizontal"
                      android:layout_marginLeft="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="10dp"
        >
    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="2dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginTop="5dp"


    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:weightSum="1"
                      android:layout_weight="1"
                      android:layout_marginRight="20dp"
                      android:layout_marginLeft="20dp"
        >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:hint="Enter here"
                      android:textColor="@color/colorPurple"
                      android:textSize="15dp"
                      android:id="@+id/breakfastExplaination"
                      android:visibility="gone"
                      android:layout_marginBottom="10dp"
          android:fontFamily="sans-serif-black"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:hint="Enter here"
                      android:textColor="@color/colorPurple"
                      android:textSize="15dp"
                      android:id="@+id/lunchExplaination"
                      android:visibility="gone"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="sans-serif-black"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:hint="Enter here"
                      android:textColor="@color/colorPurple"
                      android:textSize="15dp"
                      android:id="@+id/dinnerExplaination"
                      android:visibility="gone"
                      android:layout_marginBottom="10dp"
                      android:fontFamily="sans-serif-black"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center_horizontal"
                      android:layout_marginLeft="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="10dp"
        >
            <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="2dp"
                                                android:layout_gravity="center"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginTop="5dp"


            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:weightSum="1"
                              android:layout_weight="1"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                >
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:hint="Enter here"
                              android:textColor="@color/colorPurple"
                              android:textSize="15dp"
                              android:id="@+id/wakeupExplaination"
                              android:visibility="gone"
                              android:layout_marginBottom="10dp"
                              android:fontFamily="sans-serif-black"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:hint="Enter here"
                              android:textColor="@color/colorPurple"
                              android:textSize="15dp"
                              android:id="@+id/midmealsExplaination"
                              android:visibility="gone"
                              android:layout_marginBottom="10dp"
                              android:fontFamily="sans-serif-black"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:hint="Enter here"
                              android:textColor="@color/colorPurple"
                              android:textSize="15dp"
                              android:id="@+id/midsnacksExplaination"
                              android:visibility="gone"
                              android:layout_marginBottom="10dp"
                              android:fontFamily="sans-serif-black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:checkable = "true"
            android:layout_gravity="bottom"
            android:background="@color/colorLightPink"
            app:itemTextColor="@color/colorPurple"

            app:menu="@menu/bottom_navigation" />

</RelativeLayout>