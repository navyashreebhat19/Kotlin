<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
    android:layout_marginBottom="?attr/actionBarSize">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:weightSum="7"
    >
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:weightSum="1">


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="ABOUT"
                              android:layout_gravity="center"
                              android:textColor="@color/colorPink"
                              android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_marginTop="40dp"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:weightSum="6"
           >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="What is GM diet?"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:textColor="@color/colorPink"
                          android:textSize="20dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:text="GM diet is diet done for 7-day in a week.Each day will focus on highly nutrient food.
GM stands for General Motors.Sources claim that this diet was taken for play to help empolyees of General Motors and endorse this plan for them inorder to lose weight."

                          android:textColor="@color/colorPink"
                          android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="How it works?"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:textColor="@color/colorPink"
                          android:textSize="20dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:text="1. Encourages people to avoid sugars or junk food \n
2. Encourages people to eat fruits and vegetables,which are healthy and supplies enough nutrients and protiens in right propotionate.\n
3. Encourages people to drink lot of water which indeed is good."

                          android:textColor="@color/colorPink"
                          android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Pros:"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:textColor="@color/colorPink"
                          android:textSize="20dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:text="1. It consists of fruits and vegetables which are staple food.Which helps to reduce accumulated fat in the body,because they are low in calories and high in fiber.\n
2. It doesnot allow added sugars in either food or beverages,including alcohol.\n
3. Improved appearance of the skin.\n
4. Enhanced mood.\n
5. Improves metabolism.\n
6. Detoxification.\n
7. Cures constipation."

                          android:textColor="@color/colorPink"
                          android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Cons:"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:textColor="@color/colorPink"
                          android:textSize="20dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:text="1. Lacks certain nutrients,vitamins as it follows strict diet.\n
2. Short-term weight loss.Since,its not suitable for long-term as person may regain weight once dieting is stopped.\n
3. Dehydration\n
4. Fatigue.\n
5. Headaches.\n
6. Poor physical performance during exercises.\n
7. Not reccomended during periods as it makes person weak."

                          android:textColor="@color/colorPink"
                          android:textSize="15dp"/>
            </LinearLayout>

            </android.support.v7.widget.CardView>
            </LinearLayout>



    </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:checkable = "true"
            android:layout_gravity="bottom"
            android:background="@color/colorLightPink"
            app:itemTextColor="@color/colorPurple"

            app:menu="@menu/home_navigation" />
</FrameLayout>